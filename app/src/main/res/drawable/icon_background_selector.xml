<!-- res/drawable/icon_background_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi được chọn (active) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFEB3B"/> <!-- Màu nền khi được chọn -->
            <corners android:radius="8dp"/> <!-- Góc bo tròn -->
        </shape>
    </item>
    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Màu nền mặc định -->
            <corners android:radius="8dp"/> <!-- Góc bo tròn -->
        </shape>
    </item>
</selector>
